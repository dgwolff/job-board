<div class="container">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Company</th>
        <!-- <th>City</th>
        <th>State</th> -->
        <th>Location</th>
        <th>Listed</th>
        <th>Snippet</th>
        <!-- <th>Jobkey</th> -->
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= link_to post.jobtitle, post.url %></td>
          <td><%= post.company %></td>
          <!-- <td><%= post.city %></td>
          <td><%= post.state %></td> -->
          <td><%= post.formatted_location %></td>
          <td><%= "#{time_ago_in_words(post.date)} ago" %></td>
          <td><%= post.snippet %></td>
          <!-- <td><%= post.jobkey %></td> -->
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
</div>